<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.joans.timetracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LlistaActivitatsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PrincipalActivity"/>
        <activity android:name=".LlistaIntervalsActivity"></activity>
        <activity android:name=".AfegirTascaActivity" android:label="@string/add_task_title"></activity>
        <activity android:name=".AfegirProjecteActivity" android:label="@string/add_project_title"></activity>
        <activity android:name=".EditarTascaActivity" android:label="@string/edit_task_title"></activity>
        <activity android:name=".EditarProjecteActivity" android:label="@string/edit_project_title"></activity>
        <activity android:name=".NouInformeActivity" android:label="@string/new_report_title"></activity>
        <service
            android:name=".GestorArbreActivitats"
            android:enabled="true"></service>


    </application>
</manifest>